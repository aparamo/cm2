    <%= f.label :level_id %><br />
    <%= f.number_field :level_id %>
  </div>
  <div class="field">
    <%= f.label :i %><br />
    <%= f.text_field :i %>
  </div>
  <div class="field">
    <%= f.label :i2 %><br />
    <%= f.text_field :i2 %>
  </div>
  <div class="field">
    <%= f.label :video %><br />
    <%= f.text_field :video %>
  </div>
