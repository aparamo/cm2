<p id="notice"><%= notice %></p>

<h3>
  <%= @puzzle.title %>
</h3>

<p>
  <b>Question:</b>
  <%= @puzzle.question %>
</p>

<p>
  <b>Ex:</b>
  <%= @puzzle.ex %>
</p>

<p>
  <b>Ex2:</b>
  <%= @puzzle.ex2 %>
</p>

<p>
  <b>Level:</b>
  <%= @puzzle.level_id %>
</p>

<p>
  <b>I:</b>
  <%= @puzzle.i %>
</p>

<p>
  <b>I2:</b>
  <%= @puzzle.i2 %>
</p>

<p>
  <b>Video:</b>
  <%= @puzzle.video %>
</p>

<%= form_tag("/puzzles/#{@puzzle.id}/answ", :method => "post") do %>
  <%= label_tag(:answ, "answer:") %>
  <%= text_field_tag(:answ) %>
  <%= submit_tag("Answer") %>
<% end %>


<%= link_to 'Back', puzzles_path %>
