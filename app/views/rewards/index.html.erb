<h1>Listing rewards</h1>

<table class="table">
  <tr>
    <th>Id</th>
    <th>Title</th>
    <th>Description</th>
    <th>Unlocked</th>
    <th>File url</th>
    <th>Level</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @rewards.each do |reward| %>
  <tr>
    <td><%= reward.id %></td>
    <td><%= reward.title %></td>
    <td><%= reward.description %></td>
    <td><%= reward.unlocked %></td>
    <td><%= reward.file_url %></td>
    <td><%= reward.level_id %></td>
    <td><%= link_to 'Show', reward %></td>
    <td><%= link_to 'Edit', edit_reward_path(reward) %></td>
    <td><%= link_to 'Destroy', reward, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

