<h1>Listing answers</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Explanation</th>
    <th>Ex</th>
    <th>Ex2</th>
    <th>Puzzle</th>
    <th>I</th>
    <th>I2</th>
    <th>Video</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @answers.each do |answer| %>
  <tr>
    <td><%= answer.title %></td>
    <td><%= answer.explanation %></td>
    <td><%= answer.ex %></td>
    <td><%= answer.ex2 %></td>
    <td><%= answer.puzzle_id %></td>
    <td><%= answer.i %></td>
    <td><%= answer.i2 %></td>
    <td><%= answer.video %></td>
    <td><%= link_to 'Show', answer %></td>
    <td><%= link_to 'Edit', edit_answer_path(answer) %></td>
    <td><%= link_to 'Destroy', answer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

