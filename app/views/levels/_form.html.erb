<%= form_for(@level) do |f| %>
  <% if @level.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@level.errors.count, "error") %> prohibited this level from being saved:</h2>

      <ul>
      <% @level.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :extra %><br />
    <%= f.text_area :extra %>
  </div>
  <div class="field">
    <%= f.label :fun_url %><br />
    <%= f.text_field :fun_url %>
  </div>
  <div class="field">
    <%= f.label :science_url %><br />
    <%= f.text_field :science_url %>
  </div>
  <div class="field">
    <%= f.label :image_url %><br />
    <%= f.text_field :image_url %>
  </div>

  <%= f.fields_for :puzzle do |builder| %>
    <fieldset>
      <%= builder.label :question, "Q" %><br />
      <%= builder.text_area :question %>
      <%= builder.check_box :_destroy %>
      <%= builder.label :_destroy, "remove puzzle" %>
    </fieldset>
  <% end %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
